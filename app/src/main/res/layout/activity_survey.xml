            <RadioButton
                android:id="@+id/radioButtonG6s2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 2" />

            <RadioButton
                android:id="@+id/radioButtonG6s3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
